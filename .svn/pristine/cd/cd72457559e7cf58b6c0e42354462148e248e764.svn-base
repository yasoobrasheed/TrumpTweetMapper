import json

import csv

with open('trumpData.json') as f:
    data = json.load(f)

# {date: [tweets], etc.}
keyData = {}
for datum in data:
    date = datum['created_at'].encode('ascii', 'ignore')
    text = datum['text'].encode('ascii', 'ignore')

    md = date[0:10]
    y = date[26:30]

    if (y == '2017'):
        if md in keyData:
            keyData[md].append(text)
        else:
            keyData[md] = []
            keyData[md].append(text)

# [{date: "", tweets: []}, etc.]
organized = []
for key in keyData:
    organized.append({'date': key, 'tweets': keyData[key]})


csvfile = open('SP500.csv', 'r')
jsonfile = open('SP500.json', 'w')

fieldnames = ("DATE","SP500")
reader = csv.DictReader( csvfile, fieldnames)
out = json.dumps( [ row for row in reader ] )
jsonfile.write(out)